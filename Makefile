run-local:
	@echo "=== ðŸ‘¾ Running local prod ==="
	docker compose --file docker-compose.local.yml up --build --force-recreate

pull:
	@echo "=== ðŸš¨ Pull images ==="
	docker compose pull

run: pull
	@echo "=== ðŸ‘¾ Running prod ==="
	docker compose up -d --force-recreate

follow-logs:
	@echo "=== ðŸ“– Show logs ==="
	docker compose logs --follow

stop:
	@echo "=== ðŸš« Stopping ==="
	docker compose stop